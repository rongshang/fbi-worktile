<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry location="/WorkSpace/fbi-worktile/worktile-web/lib/ojdbc6.jar"/>
    <!--信息-->
    <context id="AllInfo" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
                        connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
                        userId="worktile"
                        password="worktile">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="worktile.repository.model" targetProject="main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="worktile.repository.mapper" targetProject="main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator targetPackage="worktile.repository.dao" targetProject="main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--业务类例子 -->
        <table schema="worktile" tableName="WORKTILE_APPOINT">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table schema="worktile" tableName="MENU_APPOINT">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table schema="worktile" tableName="PTLOGICACT">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table schema="worktile" tableName="PTMENU">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table schema="worktile" tableName="WORKTILE_APPOINT">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table schema="worktile" tableName="WORKTILE_APPOINT_HIS">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table schema="worktile" tableName="WORKTILE">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
       <!-- 平台类 有几个表并不是Mybatis自动生成的，更新慎用
        <table schema="worktile" tableName="DEPT">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        <table schema="worktile" tableName="OPER">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table>
        -->
    </context>
</generatorConfiguration>
